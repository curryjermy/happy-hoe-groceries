doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Happy Hoe Grocery - login 
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
    //- link(rel='stylesheet' href='/css/register.css')
  body
    .form-bg
      .container
        .row
          .col-md-4.col-md-offset-4
            .form-container
              .form-icon
                i.fa.fa-user
              h3.title Login 
              form#registrationForm.form-horizontal(onsubmit='submitForm()' action="/login" method="POST")
                .form-group
                  label(for='email') Email
                  input#email.form-control(type='email' name='email' placeholder='Email address' required)
                .form-group
                  label(for='password') Password
                  input#password.form-control(type='password' name='password' placeholder='Password' required)
                input(type='submit' value='Register' class='register-btn')
                a(href='/signup') Already have an account? Login
    script(src='/js/signupValidation.js')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js')