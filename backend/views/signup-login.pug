doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Login page
  link(rel='stylesheet' href='/css/main.css')
.form-structor
  .signup
    h2#signup.form-title
    form(action="/signup", method="POST")
      span or
      | Sign up
    .form-holder
      input#name.input(type='text' name="name" placeholder='Name' )
      input#email.input(type='email' name="email" placeholder='Email' )
      input#password.input(type='password' name="password" placeholder='Password' )
      label(for='role') Role
              select#role.form-control()
                option(value='') Select a role
                option(value='manager') Manager
                option(value='sales-agent') Sales Agent
                option(value='admin') Admin
              span#role-error.error-message
      label(for='branch') Branch
              select#branch.form-control()
                option(value='') Select a branch
                option(value='mattuga') Mattuga 
                option(value='maganjo') Maganjo
    button.submit-btn Sign up
  .login.slide-up
    .center
      h2#login.form-title(action="/login" method="POST")
        span or
        | Log in
      .form-holder
        input#login-email.input(type='email' name="email" placeholder='Email' )
        input#login-password.input(type='password' name="password" placeholder='Password' )
      button.submit-btn(onclick="window.location.href='/dashboard'") Log in
script(src='/js/main3.js')
